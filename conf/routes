# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET                 /                                           controllers.PivotTableController.index

POST                /add-row                                    controllers.PivotTableController.addRow()
GET                 /delete-row/:id                             controllers.PivotTableController.deleteRow(id:Long)

POST                /add-column                                 controllers.PivotTableController.addColumn()
GET                 /delete-column/:id                          controllers.PivotTableController.deleteColumn(id:Long)

POST                /add-value                                  controllers.PivotTableController.addValue()
GET                 /delete-value/:id                           controllers.PivotTableController.deleteValue(id:Long)


GET                 /connections                                controllers.ConnectionController.index

POST                /connections/sql/add                        controllers.ConnectionController.addSQLConnection()

POST                /connections/csv/add                        controllers.ConnectionController.addCSVConnection()


# Map static resources from the /public folder to the /assets URL path
GET                 /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)

