# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET                 /                                           controllers.IndexController.index

GET                 /pivot                                      controllers.PivotTableController.index
POST                /pivot/add-row                              controllers.PivotTableController.addRow()
GET                 /pivot/delete-row/:id                       controllers.PivotTableController.deleteRow(id:Long)

POST                /pivot/add-column                           controllers.PivotTableController.addColumn()
GET                 /pivot/delete-column/:id                    controllers.PivotTableController.deleteColumn(id:Long)

POST                /pivot/add-value                            controllers.PivotTableController.addValue()
GET                 /pivot/delete-value/:id                     controllers.PivotTableController.deleteValue(id:Long)


GET                 /connections                                controllers.ConnectionController.index

POST                /connections/sql/add                        controllers.ConnectionController.addSQLConnection()

POST                /connections/csv/add                        controllers.ConnectionController.addCSVConnection()

GET                 /sources                                    controllers.SourceController.index
# Map static resources from the /public folder to the /assets URL path
GET                 /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)

